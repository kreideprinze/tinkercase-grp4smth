#include <SoftwareSerial.h>

SoftwareSerial BTSerial(10, 11); 
void setup() {
  Serial.begin(9600);
  BTSerial.begin(9600);
  pinMode(13, OUTPUT);
}
void loop() {
  if (BTSerial.available()) {
    char data = BTSerial.read();
    if (data == '1') {
      digitalWrite(13, HIGH); 
    } else if (data == '0') {
      digitalWrite(13, LOW); 
    }
  }
}
